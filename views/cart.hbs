<h1>Cart</h1>

<div id="cart">
{{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Count</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button
            class="btn btn-small js-remove" 
            data-id="{{ id}}" 
            data-csrf="{{@root.csrf}}"
          >
            Delete
          </button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>


  <p><strong>Total:</strong> <span class="price">{{price}}</span></p>

  <form action="/orders" method="post">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn">Create order</button>
  </form>
{{else}}
<p>Empty</p>
{{/if}}
</div>