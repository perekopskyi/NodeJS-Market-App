<h1>Profile</h1>

<div class="row">
  <div class="col s6">

    {{#if user.avatarUrl}}
      <img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
    {{else}}
      <p>Avatar left</p>
    {{/if}}
  </div>
  <div class="col s6">  
    <form action="/profile" method="post" enctype="multipart/form-data">

      <p>Your email: <strong>{{user.email}}</strong></p>

      <div class="input-field">
        <input
          name="name"
          id="name"
          type="text"
          class="validate"
          value="{{user.name}}"
        />
        <label for="name">Name</label>
        <span class="helper-text" data-error="Name is required"></span>
      </div>

      <div class="input-field file-field">
        <div class="btn">
          <span>Avatar</span>
          <input type="file" name="avatar" id="avatar">
        </div>
        <div class="file-path-wrapper">
          <input type="text" name="" id="" class="file-path validate">
        </div>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">

      <button type="submit" class="btn">Save</button>
    </form>
  </div>
</div>